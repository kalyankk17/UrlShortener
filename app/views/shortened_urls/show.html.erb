<div class="root">
  <div class="container py-5">
    <h2 class="h2 text-center text-secondary mb-4">
      Your Shortened URLs
    </h2>

    <div class="card shadow-sm border-0 rounded-4 mb-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
            <tr>
              <th>Short URL</th>
              <th>Original URL</th>
              <th>Created Date</th>
              <th>Clicks</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @urls_details.each do |url_detail| %>
              <tr>
                <td>
                  <div class="input-group" data-controller="copy">
                    <input type="text" class="form-control form-control-sm" value="<%= "#{@domain_name}#{url_detail.short_url}" %>" readonly>

                    <button class="btn btn-outline-success btn-sm button-addon2" type="button"
                            onclick="window.location.href='<%= "#{@domain_name}#{url_detail.short_url}" %>';">
                      Visit
                    </button>
                    <button class="btn btn-outline-primary btn-sm copy-button" data-action="click->copy#copy">Copy</button>
                  </div>
                </td>
                <td class="text-truncate" style="max-width: 200px;">
                  <a href="#" class="text-decoration-none"><%= url_detail.long_url %></a>
                </td>
                <td><%= url_detail.created_at.strftime("%d-%m-%Y %H:%M:%S") %></td>
                <td>
                  <span class="badge bg-success">245</span>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <button class="btn btn-outline-primary">Stats</button>
                    <button class="btn btn-outline-danger">Delete</button>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <button class="btn btn-success btn-lg">
        <%= link_to "Create New Short URL", root_path, class: 'text-decoration-none text-white'%>
      </button>
    </div>
  </div>
</div>